URxvt.termName:		rxvt

!	URxvt Fonts

!URxvt*font:		xft:Inconsolata:size=12
!URxvt*letterSpace:	-1
URxvt*font:		xft:Monospace:size=12
URxvt*letterSpace:	-1

!	URxvt Perl Extensions

URxvt.perl-ext-common:		default,matcher,fullscreen,clipboard,selection-to-clipboard

URxvt.url-launcher:		xdg-open		! clickable URLS
URxvt.matcher.button:		1
URxvt.keysym.C-Delete: 		perl:matcher:last	! keybind to get recent URLS
URxvt.keysym.M-Delete: 		perl:matcher:list
URxvt.matcher.rend.0:		Uline Bold fg5		! underline and color URLS blue

!URxvt.tabbed.autohide:		yes			! simple tabs
!URxvt.tabbed.tabbar-fg: 	2			! tab bar fg color
!URxvt.tabbed.tabbar-bg: 	0			! tab bar bg color
!URxvt.tabbed.tab-fg:    	10			! tab color
!URxvt.tabbed.tab-bg:    	0			! tab bg color
!URxvt.tabbed.title: 		yes			! give tabs titles instead of numbers
!URxvt.tabbed.new-button:	yes			! show the new tab button

!	URxvt Key Binds

URxvt.keysym.M-c: 	perl:clipboard:copy		! alt-c to copy
URxvt.keysym.M-v: 	perl:clipboard:pasteq		! alt-v to paste
URxvt.keysym.F11: 	perl:fullscreen:switch		! F11 for fullscreen

!	URxvt scrollbar and cursor style

URxvt*saveLines: 		300000
URxvt.scrollBar: 		false
URxvt*scrollstyle:		plain
URxvt*cursorBlink: 		false
URxvt*cursorUnderline: 		false
URxvt*cursorColor: 		#96b5c6

!	URxvt transparent
!URxvt.transparent:		true
!URxvt.tintColor:		#f7f7f7
!URxvt.shading:			20
